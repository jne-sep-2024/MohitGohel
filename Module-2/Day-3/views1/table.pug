doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title User Table
    style.
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f2f2f2;
      }
  body
    h1 User Data
    if userArray.length
      table
        thead
          tr
            th firstname
            th lastname
            th age
        tbody
          each user in userArray
            tr
              td= user.firstname
              td= user.lastname
              td= user.age
    else
      p No users found.
